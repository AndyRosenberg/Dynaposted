
default: &default
  adapter: postgresql
  pool: 5
  timeout: 5000

development:
  adapter: postgresql
  encoding: unicode
  database: dynaposted_dev
  host: localhost
  pool: 5
  user: <%= ENV['PG_USER'] %>
  password: <%= ENV['PG_PW'] %>

test:
  adapter: postgresql
  encoding: unicode
  database: dynaposted_test
  host: localhost
  pool: 5
  user: <%= ENV['PG_USER'] %>
  password: <%= ENV['PG_PW'] %>

production:
  <<: *default